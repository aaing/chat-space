.chat
  .chat-side
    .side-header
      %span.side-header__user-name
        = current_user.name
      %a.side-header__new-icon{:href => "groups/new"}
        %i.fa.fa-pencil.fa-write{"aria-hidden" => "true"}
      %a.side-header__setting-icon{:href => "users/edit"}
        %i.fa.fa-cog.fa-setting{"aria-hidden" => "true"}
    .side-contents
      = render partial: 'group'
  .chat-contents
    .contents-header
      %span.contents-header__group-name
        Testroom
      %span.contents-header__edit-button
        Edit
      %span.contents-header__group-members
        Members:yuta
    .contents-main
      = render partial: 'message'
      = render partial: 'message'
      = render partial: 'message'
    .contents-footer
      .message-form
        = form_for @message do |f|
          .message-content
            = f.text_field placeholder:"type a message"
            %label
              = f.image_file_field :image
              %i.fa.fa-picture-o.fa-2x{"aria-hidden" => "true"}
            = f.submit "Send", class: "message-form__submit-button"
